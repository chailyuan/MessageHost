<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#50eee4da">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_storageCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/edit_search"
            android:drawableLeft="@drawable/sp"
            android:textColor="#0f0f0f"
            android:padding="5dp"
            android:hint="请输入条形码"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存状态"
            android:textOn=""
            android:textOff=""
            android:id="@+id/sw_storage"
            android:enabled="false"
            android:checked="false" />
        TextView
            android:id="@+id/tv_Storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存"/>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_inStorage"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:button="@null"
                android:text="入库"
                android:gravity="center"
                android:textSize="17.0sp"
                android:checked="true"
                android:enabled="false"
                android:background="@drawable/background_radiobutton"/>

            <RadioButton
                android:id="@+id/radio_outStorage"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:button="@null"
                android:text="出库"
                android:gravity="center"
                android:textSize="17.0sp"
                android:enabled="false"
                android:background="@drawable/background_radiobutton"/>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装备位置："/>
            <EditText
                android:textAlignment="center"
                android:enabled="false"
                android:id="@+id/et_StoragePosition"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/background_edit_show_list"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装备类别："/>
            <EditText
                android:textAlignment="center"
                android:enabled="false"
                android:id="@+id/et_StorageStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/background_edit_show_list"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:enabled="false"
        android:id="@+id/btn_StorageSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_login"
        android:text="保存"/>
    <ListView
        android:id="@+id/lv_Storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>
